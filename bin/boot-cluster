#!/bin/bash

master_external_ip=10.243.28.34
nodes=${1:-4}

sed -i '
	/172.16.10/d
	/10.243.28/d
	' $HOME/.ssh/known_hosts

mkdir -p $HOME/.dsh/group/cluster

echo "Booting master."
nova boot --image=fedora-17-x86_64-3 \
	--flavor=m1.medium \
	--user_data playbooks/files/master/userdata \
	--key_name lars_madhatter \
	--poll \
	lars-master

echo "Assigning master ip."
nova add-floating-ip lars-master $master_external_ip
echo $master_external_ip > $HOME/.dsh/group/cluster/master

echo "Booting nodes."
for (( x=0; x<$nodes; x++ )); do
	echo "  Booting node $x."
	nova boot --image=fedora-17-x86_64-minimal \
		--flavor=m1.small \
		--user_data playbooks/files/minions/userdata \
		--key_name lars_madhatter \
		lars-node-$x > /dev/null 2>&1 &
	server_names="$server_names lars-node-$x"
done

echo "Waiting for instances."
wait
nova-wait-active $server_names

echo "Building hosts file."
(
	cat hosts.in
	./bin/gen-node-ips
) > hosts
./bin/gen-node-ips > $HOME/.dsh/group/cluster/minions

echo "Recording master internal ip."
nova-list-ips | \
	awk '
	$1 == "lars-master" && $4 ~ /^172.16.10/ {
		printf "master_ip: %s\n", $4
	}' > playbooks/vars/master_ip.yml

